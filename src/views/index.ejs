<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("partials/header") %>
        <title>Index</title>
</head>

<body>

    <%- include ("partials/navigation") %>

    <div class="container p-4">
        <div class="row">
            <% libros.forEach(function (libro) {%>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <%= libro.titulo %> / <%= libro.autor %>
                        </div>

                        <img src="<%= libro.imagen %>"  class="card-img-top" alt="">

                        <div class="card-body">
                            <p>
                                <%= libro.descripcion %>
                            </p>
                        </div>
                        <div class="card-footer">
                            <a href="/borrar/<%= libro.id%>" class="btn btn-danger">
                                Borrar
                            </a>
                        </div>
                    </div>
                </div>
            <%}) %>


        </div>
    </div>


</body>

</html>